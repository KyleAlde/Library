<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1000.0" prefWidth="1420.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.manageRequestsController">
   
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <bottom>
            <StackPane prefHeight="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Pane HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </StackPane>
         </bottom>
         <center>
            <VBox alignment="TOP_CENTER" prefWidth="1420.0" BorderPane.alignment="TOP_CENTER">
               <children>
                  <!-- FIXED TABLEVIEW: Removed horizontal scrollbar -->
                  <TableView fx:id="requestList" maxWidth="Infinity" prefHeight="800.0">
                    <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                      <TableColumn fx:id="id" prefWidth="-1.0" text="Request ID" />
                      <TableColumn fx:id="requestDate" prefWidth="-1.0" text="Request Date" />
                        <TableColumn fx:id="status" prefWidth="-1.0" text="status" />
                        <TableColumn fx:id="BookID" prefWidth="-1.0" text="Book ID" />
                        <TableColumn fx:id="borrowerID" prefWidth="-1.0" text="Borrower ID" />
                    </columns>
                  </TableView>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="1420.0" spacing="10.0">
                     <children>
                        <HBox alignment="TOP_CENTER" prefWidth="1420.0" spacing="20.0">
                           <children>
                              <TextField fx:id="displayRequestID" editable="false" promptText="Request ID" />
                              <TextField fx:id="displayRequestDate" editable="false" promptText="Request Date" />
                              <TextField fx:id="displayStatus" editable="false" promptText="Status" />
                              <TextField fx:id="displayBookID" editable="false" promptText="Book ID" />
                              <TextField fx:id="displayBorrowerID" editable="false" promptText="Borrower ID" />
                           </children></HBox>
                        <HBox alignment="CENTER" prefWidth="1420.0" spacing="20.0">
                           <children>
                              <Button fx:id="approveRequest" mnemonicParsing="false" onAction="#onActionApproveRequest" prefWidth="120.0" text="Approve" />
                              <Button fx:id="denyRequest" mnemonicParsing="false" onAction="#onActionDenyRequest" prefWidth="120.0" text="Deny" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </center>
         
      </BorderPane>
   </children>
</AnchorPane>
