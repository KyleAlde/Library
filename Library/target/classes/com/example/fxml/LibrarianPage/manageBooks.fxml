<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1000.0" prefWidth="1420.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.manageBooksController">
   
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <bottom>
            <StackPane prefHeight="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Pane HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </StackPane>
         </bottom>
         <center>
            <VBox alignment="TOP_CENTER" prefWidth="1420.0" BorderPane.alignment="TOP_CENTER">
               <children>
                  <!-- FIXED TABLEVIEW: Removed horizontal scrollbar -->
                  <TableView fx:id="BookList" maxWidth="Infinity" prefHeight="800.0">
                    <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                      <TableColumn fx:id="isbn" prefWidth="-1.0" text="isbn" />
                      <TableColumn fx:id="title" prefWidth="-1.0" text="title" />
                        <TableColumn fx:id="author" prefWidth="-1.0" text="author" />
                        <TableColumn fx:id="publisher" prefWidth="-1.0" text="publisher" />
                        <TableColumn fx:id="publicationDate" prefWidth="-1.0" text="publication_date" />
                        <TableColumn fx:id="status" prefWidth="-1.0" text="status" />
                        <TableColumn fx:id="synopsis" prefWidth="-1.0" text="synopsis" />
                        <TableColumn fx:id="coverID" prefWidth="-1.0" text="cover_id" />
                        <TableColumn fx:id="bookGenres" prefWidth="-1.0" text="book_genres" />
                    </columns>
                  </TableView>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="1420.0" spacing="10.0">
                     <children>
                        <HBox alignment="TOP_CENTER" prefWidth="1420.0" spacing="20.0">
                           <children>
                              <TextField fx:id="insertIsbn" promptText="isbn" />
                              <TextField fx:id="insertTitle" promptText="title" />
                              <TextField fx:id="insertAuthor" promptText="author" />
                              <TextField fx:id="insertPublisher" promptText="publisher" />
                              <TextField fx:id="insertPublicationDate" promptText="publication date" />
                              <ComboBox fx:id="insertStatus" promptText="status" />
                              <TextField fx:id="insertSynopsis" promptText="synopsis" />
                              <TextField fx:id="insertCoverID" promptText="Cover ID" />
                              <ComboBox fx:id="insertBookGenres" promptText="Book Genres" />
                           </children></HBox>
                        <HBox alignment="CENTER" prefWidth="1420.0" spacing="20.0">
                           <children>
                              <Button fx:id="addBook" mnemonicParsing="false" onAction="#onActionAddBook" text="Add Book" />
                              <Button fx:id="clearFields" mnemonicParsing="false" onAction="#onActionClearFields" text="Clear Fields" />
                              <Button fx:id="editBook" mnemonicParsing="false" onAction="#onActionEditBook" text="Edit Book" />
                              <Button fx:id="deleteBook" mnemonicParsing="false" onAction="#onActionDeleteBook" text="Delete Book" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </center>
         
      </BorderPane>
   </children>
</AnchorPane>
